<p id="notice"><%= notice %></p>

<h1>Saved Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @saved_posts.each do |saved_post| %>
      <tr>
        <td><%= saved_post.user_id %></td>
        <td><%= saved_post.post_id %></td>
        <td><%= link_to 'Show', saved_post %></td>
        <td><%= link_to 'Edit', edit_saved_post_path(saved_post) %></td>
        <td><%= link_to 'Destroy', saved_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Saved Post', new_saved_post_path %>
